<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report.">
    <t t-call="web.html_container">
        <t t-call="web.internal_layout">
            <div class="page">
                <h3 class="mb32">Report_Template</h3>
                <t t-set="info" t-value="get_header_info"/>
                <h3 class="text-center mb32">
                    Analyze from
                </h3>
                <table class="table table-bordered mb32" style="table-layout:auto">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th/>
                        </tr>
                        <tr>
                            <td rowspan="2">
                                <strong>Departments and Employees</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">Sum</td>
                        </tr>
                    </thead>
                </table>

                <div class="col-3 offset-5 mt32">
                    <table class="table table-bordered">
                         <tbody>
                            <tr t-foreach="get_students_status" t-as="status">
                                <td><t t-esc="status['sID']"/></td>
                                <td><t t-esc="status['sName']"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </t>
</template>

</odoo>
